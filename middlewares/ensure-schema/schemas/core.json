{
  "$id": "/core",
  "definitions": {
    "identifier": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "reference": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type"
      ],
      "additionalProperties": false
    },
    "refs": {
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "$ref": "#/definitions/reference"
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": ["object", "string"],
      "additionalProperties": true
    },
    "members": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/identifier"
      },
      "uniqueItems": true
    },
    "links": {
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "type": "string"
        }
      }
    },
    "body": {
      "type": ["object", "string"],
      "additionalProperties": true
    }
  }
}

